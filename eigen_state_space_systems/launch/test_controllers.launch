<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix"
   value="gdb --ex run --args" />

    <rosparam command="load" file="$(find eigen_state_space_systems)/config/test.yaml" />

    <node   launch-prefix="$(arg launch_prefix)" 
            pkg="eigen_state_space_systems"
            type="test_controllers"
            name="test_controllers"
            output="screen"/>

</launch>
